%h1 Listing students

%table
  %thead
    %tr
      %th Firstname
      %th Lastname
      %th Mobile
      %th Dateofbirth
      %th
      %th
      %th

  %tbody
    - @students.each do |student|
      %tr
        %td= student.firstname
        %td= student.lastname
        %td= student.mobile
        %td= student.dateofbirth
        %td= link_to 'Show', student
        %td= link_to 'Edit', edit_student_path(student)
        %td= button_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Student', new_student_path
