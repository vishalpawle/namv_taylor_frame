-# frozen_string_literal: true
= simple_form_for(@student) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :firstname
    = f.input :lastname
    = f.input :mobile, as: :integer
    = f.input :gender, as: :radio_buttons, collection: [['Male', 'male'], ['Female', 'female'], ['Other', 'other']]
    = f.input :dateofbirth, :label => "Date of Birth"

  .form-actions
    = f.button :submit
